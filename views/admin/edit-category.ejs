<%- include("../../views/partials/admin/header") %>

<style>
    .edit-category-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        background-color: #f8f9fa;
    }

    .edit-category-card {
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
    }

    .edit-category-card h2 {
        margin-bottom: 30px;
        text-align: center;
    }

    .form-control {
        height: 50px;
        font-size: 16px;
    }

    textarea.form-control {
        height: 120px;
        resize: none;
    }

    .btn-primary {
        padding: 12px 20px;
        font-size: 16px;
        width: 100%;
    }
</style>

<div class="edit-category-wrapper">
    <div class="edit-category-card">
        <h2>Edit Category</h2>
        <form method="post" action="/admin/editCategory/<%=category._id%>">
            <div class="mb-4">
                <label for="product_name" class="form-label">Name</label>
                <input type="text" name="categoryName" value="<%= category.name %>" class="form-control" required />
            </div>

            <div class="mb-4">
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control" required><%= category.description %></textarea>
            </div>

            <div class="d-grid mt-4">
                <button class="btn btn-primary" type="submit">Update Category</button>
            </div>
        </form>
    </div>
</div>
